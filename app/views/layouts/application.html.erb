<!DOCTYPE html>
<html>
<head>
  <title>Trucktrakkor</title>
  <%= stylesheet_link_tag 'main', :media => 'screen' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "http://maps.google.com/maps/api/js?sensor=false" %>
  <%= csrf_meta_tag %>
</head>
<body>
<div id="header">
	<%= image_tag("logo.png", :alt => "Truck Trakkor", :class => "logo") %>
	<ul class="menu_block top_menu">
			<li><a>Chicago</a></li> |
			<li><a>San Francisco<a></li>
	</ul>
</div>
<div id="search_form">
	<ul>
		<li>
			<%= form_tag(search_path, :method => "get") do %>  
				<%= label_tag(:q, "search for a name or category:") %>  
				<%= text_field_tag(:search_string) %>  
				<%= submit_tag("Go!") %> ..OR.. 
				<%= label_tag(:q, "enter an address:") %>  
				<%= text_field_tag(:address_string) %>  
				<%= submit_tag("Go!") %> 
			<% end %>
		</li>
	</ul>
</div>
<div id="container">
	<%= yield %>
</div>
<div id="footer">
	<p>
		<ul class="menu_block bottom_menu">
			<li><%= link_to "About", about_path %></li> |
			<li><a>Truck Operator?</a></li>
		</ul>
	</p>
</div>
</body>
</html>
